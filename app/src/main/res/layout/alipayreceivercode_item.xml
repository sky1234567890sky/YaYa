<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->
        <!--选择图片后上传   单独显示一张图片-->
        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:id="@+id/ImageView_url_alipay"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->

        <!--文字提示未审核-->
        <TextView
            android:id="@+id/hint_unreviewed"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:text="等待后台审核...."
            android:gravity="center"
            android:background="#F8F8F8"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText"
            android:visibility="gone"
            />


        <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->


    <LinearLayout
        android:id="@+id/alipay_item_ll"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:background="#F8F8F8"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/pay_add1_iv"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:src="@mipmap/icon_chuantu"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/get_menry"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@id/alipay_item_ll"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_centerHorizontal="true"
        android:text="任意收款金额"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        tools:ignore="HardcodedText,RtlHardcoded"
        />

</RelativeLayout>


</RelativeLayout>