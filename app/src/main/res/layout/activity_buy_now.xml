<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.home.BuyNowActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/now_buy_iv"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/now_buy"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/background_rl"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13_5"
            >
            <ImageView
                android:id="@+id/now_bu_gamemoney_iv"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_youxibi"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_toRightOf="@id/now_bu_gamemoney_iv"
                android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏币购买"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
                android:layout_centerVertical="true"
            />
        </RelativeLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏币单价:￥10.0"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:layout_marginTop="@dimen/dp_27_5"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_12_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏币数量："
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/buy_gamemoney_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请填写购买游戏币数量"
                android:textSize="@dimen/sp_15"
                android:background="@null"
                android:textStyle="normal"
                android:textColor="#333333"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12_5"
            android:orientation="vertical"
            android:background="@drawable/nowbuy_center_shape_bg"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            >
            <!--剩余数量-->
            <TextView
                android:id="@+id/buy_gamemoney_remaining_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="剩余数量：3000"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:id="@+id/buy_min_gamemoney_remaining_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最小购买数量数量：3000"
                android:layout_marginLeft="@dimen/dp_13"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                android:layout_below="@+id/buy_gamemoney_remaining_quantity"
                android:textColor="#999999"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:id="@+id/buy_max_gamemoney_remaining_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                android:layout_below="@+id/buy_gamemoney_remaining_quantity"
                android:layout_toRightOf="@id/buy_min_gamemoney_remaining_quantity"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="最大购买数量：3000"
                tools:ignore="HardcodedText"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额:￥3000.0"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:layout_marginTop="@dimen/dp_25"
            android:text="支付方式：   银行卡转账"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款人姓名："
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:textStyle="normal"
                />
            <EditText
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="#A8AFBC"
                android:hint="请输入银行卡持有人姓名"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/nowbuy_commit_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_btn"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_105"
        android:text="@string/commit_overform"
        android:textColor="@color/c_ffffff"
        android:layout_gravity="center"
        />
    </LinearLayout>

</RelativeLayout>