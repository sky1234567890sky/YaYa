<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.home.BuyNowActivity"
    >
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/now_buy_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/now_buy"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardBackgroundColor="@color/c_ffffff"
                    app:cardCornerRadius="@dimen/dp_5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/homepage_shape_bg"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_13_5">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/now_bu_gamemoney_iv"
                                android:layout_width="@dimen/dp_21"
                                android:layout_height="@dimen/dp_21"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_youxibi"
                                app:riv_oval="true"
                                tools:ignore="RtlHardcoded" />
                            <TextView
                                android:id="@+id/buy_comName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_toRightOf="@id/now_bu_gamemoney_iv"
                                android:text="xxx"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_16"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/buy_comPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12_5"
                            android:layout_marginTop="@dimen/dp_27_5"
                            android:text="游戏币单价:￥xxx"
                            android:textColor="@color/c_000000"
                            android:textSize="@dimen/dp_14"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12_5"
                            android:layout_marginTop="@dimen/dp_25"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="游戏币数量："
                                android:textColor="@color/c_000000"
                                android:textSize="@dimen/sp_14"
                                tools:ignore="HardcodedText" />
                            <EditText
                                android:id="@+id/buy_gamemoney_number"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:digits="1234567890"
                                android:gravity="center_vertical"
                                android:hint="请填写购买游戏币数量"
                                android:maxLength="8"
                                android:numeric="integer"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="#333333"
                                android:textColorHint="#A8AFBC"
                                android:textCursorDrawable="@drawable/edit_cursor_color"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="normal"
                                tools:ignore="Autofill,HardcodedText,TextFields" />

                            <!--digits这个属性限制只能输入0-9这些数字</span>-->

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_12_5"
                            android:background="@drawable/nowbuy_center_shape_bg"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            tools:ignore="RtlHardcoded">
                            <!--剩余数量-->
                            <TextView
                                android:id="@+id/buy_gamemoney_shengyu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:text="剩余数量：xxx"
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="normal"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/buy_min_gamemoney_remaining_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/buy_gamemoney_shengyu"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:text="最小购买数量：xxx"
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="normal"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/buy_max_gamemoney_remaining_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/buy_gamemoney_shengyu"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_toRightOf="@id/buy_min_gamemoney_remaining_quantity"
                                android:text="最大购买数量：xxx"
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="normal"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12_5"
                            android:layout_marginTop="@dimen/dp_25"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pay_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应付金额:￥"
                                android:textColor="@color/c_000000"
                                android:textSize="@dimen/dp_15"
                                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />

                            <TextView
                                android:id="@+id/pay_money2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="0"
                                android:textColor="@color/c_000000"
                                android:textSize="@dimen/dp_15"

                                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/pay_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12_5"
                            android:layout_marginTop="@dimen/dp_25"
                            android:text="支付方式：银行卡转账"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_15"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:text="付款人姓名："
                                android:textColor="@color/c_000000"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/bank_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="请输入银行卡持有人姓名"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:textColor="@color/c_000000"
                                android:textColorHint="#A8AFBC"
                                android:textCursorDrawable="@drawable/edit_cursor_color"
                                android:textSize="@dimen/sp_14"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardBackgroundColor="@color/c_ffffff"
                    app:cardCornerRadius="@dimen/dp_5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/shiyongyongjin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="使用佣金"
                            android:textColor="@color/c_000000"
                            android:textSize="@dimen/dp_15"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


                        <TextView
                            android:id="@+id/now_buy_yongjin_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_toRightOf="@+id/shiyongyongjin"
                            android:text=":￥0"
                            android:textColor="#A8AFBC"
                            android:textSize="@dimen/sp_15"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                        <Switch
                            android:id="@+id/buy_now_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_12"
                            android:checked="false"
                            android:thumb="@drawable/switch_twocode"
                            android:track="@drawable/switch_track_selector"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:id="@+id/yiyong_yongyin_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_toLeftOf="@+id/buy_now_switch"
                            android:text="- 0"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/dp_15"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/nowbuy_commit_btn"
                    android:layout_width="@dimen/dp_305"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_35"
                    android:background="@drawable/ripple_btn"
                    android:gravity="center"
                    android:text="@string/commit_overform"
                    android:textColor="@color/c_ffffff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>