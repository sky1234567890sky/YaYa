<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.MyInviteActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/myinvite_book_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/my_invite"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18"
                tools:ignore="SpUsage" />
            <TextView
                android:id="@+id/myinvite_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/invite_friend"
                android:textColor="#0099FF"
                android:textSize="@dimen/sp_13"
                tools:ignore="SpUsage"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                />
    </RelativeLayout>


    <RelativeLayout
    android:background="@drawable/background_rl"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="true"
        android:layout_height="@dimen/dp_50"
        android:layout_width="@dimen/dp_50"
        android:src="@mipmap/icon"
        android:id="@+id/myinvite_iv"
        />
    <TextView
        android:id="@+id/my_name_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_25"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="---"
        android:layout_toRightOf="@id/myinvite_iv"
        android:layout_alignTop="@id/myinvite_iv"
        />

    <TextView
        android:id="@+id/my_name_state_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:textStyle="normal"
        android:text="ID : ---"
        android:layout_toRightOf="@id/myinvite_iv"
        android:layout_alignBottom="@id/myinvite_iv"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_14"
        android:textColor="#000"
        android:text="返利比例：2%"
        android:layout_toRightOf="@id/my_name_state_tv"
        android:layout_alignBottom="@id/my_name_state_tv"
        />
</RelativeLayout>
