<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14_5"
        android:layout_marginRight="@dimen/sp_13"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16_5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            >
            <!--<LinearLayout-->
                <!--android:layout_toRightOf="@id/xiaji_headleriv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_marginLeft="@dimen/dp_5"-->
                <!--&gt;-->
                <!---->
            <!--</LinearLayout>-->
            <ImageView
                android:id="@+id/dengji_iv1"
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                tools:ignore="ContentDescription,RtlHardcoded" />
            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_0_5"
                android:id="@+id/center_view"
                android:background="@color/c_ffffff"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_20"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/xiaji_headleriv"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon"
                android:layout_toRightOf="@+id/dengji_iv1"
                />

            <TextView
                android:id="@+id/xiaji_rabaterecord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/xiaji_headleriv"
                android:text="用户昵称"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/xiaji_jinrigongxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/vt1"
                android:text="：￥00.00"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="今日贡献:"
                android:id="@+id/vt1"
                android:layout_toRightOf="@+id/center_view"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/xiaji_id"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="18dp"
                android:layout_toRightOf="@+id/xiaji_headleriv"
                android:text="用户ID:-----"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/xiaji_jilleigongxian"
                tools:ignore="HardcodedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vt2"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="：￥00.00"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/center_view"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="累计贡献:"
                android:id="@+id/vt2"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>