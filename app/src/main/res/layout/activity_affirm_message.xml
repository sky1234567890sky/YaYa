<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context=".activity.home.AffirmMessageActivity">
        <ImageView
            android:layout_width="@dimen/dp_312_5"
            android:layout_height="@dimen/dp_127_5"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_44">
                    <ImageView
                        android:id="@+id/affirm_msg_back_iv"
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ripple_bg"
                    android:src="@mipmap/icon_back"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/affirm_msg"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_18"
                        tools:ignore="SpUsage" />
                </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/affirm_msg_shape_bg"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_21_5">
                <!--收款人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12_5"
                    android:layout_marginRight="@dimen/dp_12_5"
                    android:layout_marginBottom="@dimen/dp_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="收款人"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:text="王王王"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/receiver_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_btn_blue"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_13"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="复制"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"
                        />
                </RelativeLayout>
                <!--银行卡号-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12_5"
                    android:layout_marginRight="@dimen/dp_12_5"
                    android:layout_marginBottom="@dimen/dp_24_5"
                    android:background="@drawable/background_rl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="银行卡号"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/bank_code_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:text="666666666666666666"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/bank_code_number_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_btn_blue"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_13"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="复制"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                </RelativeLayout>
                <!--所属银行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12_5"
                    android:layout_marginRight="@dimen/dp_12_5"
                    android:background="@drawable/background_rl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所属银行"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/bank_yinhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:text="工商银行"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/bank_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_btn_blue"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_13"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="复制"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/affirm_msg_shape_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">
                <!--收款人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="金额"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:text="￥10000.00"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/bank_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_25_5"
                        android:background="@drawable/shape_btn_blue"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_13"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="复制"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                </RelativeLayout>
                <!--银行卡号-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="备注"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/remark_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:text="390ok9j"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/remark_btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_25_5"
                        android:background="@drawable/shape_btn_blue"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_13"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="复制"
                        android:textColor="#499FF1"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_23"
                    android:background="@drawable/background_rl"
                    android:text="转账时请复制以上备注信息到转账留言/备注中"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/affirm_msg_shape_eg_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="重要提醒"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="请务必使用姓名为xxx的银行卡进行转账，转账金额为2000元，请填好备注信息，才能及时进货，谢谢！" />
            </LinearLayout>
            <Button
                android:id="@+id/affirm_msg_look_btn"
                android:layout_width="@dimen/dp_305"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/shape_btn"
                android:text="@string/look_stock_state"
                android:textColor="@color/c_ffffff" />
        </LinearLayout>
</RelativeLayout>