<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/c_ffffff"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@drawable/inventory_item_bg"
            android:paddingLeft="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/finish_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="【--】订单编号：----------"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="HardcodedText"
                />
            <ImageView
                android:id="@+id/finish_comImg"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_below="@id/finish_right_iv"
                android:background="@mipmap/icon"
                tools:ignore="ContentDescription"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/finish_comImg"
                android:layout_alignBottom="@id/finish_comImg"
                android:layout_marginLeft="@dimen/dp_11_5"
                android:layout_toRightOf="@id/finish_comImg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/finish_gcomName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="----"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/finish_commodityAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="售卖数量:---"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/finish_pirce"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="售卖总价:￥xxx"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="HardcodedText" />


                </LinearLayout>


                <TextView
                    android:id="@+id/finish_commodityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="订单时间：----.--.--"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/finish_orderBuildTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="收货时间：----.--.--"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <ImageView
                android:id="@+id/finish_right_iv"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_12_5"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_yiwancheng"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>