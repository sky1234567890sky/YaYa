<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/c_ffffff"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true"
        >

    <RelativeLayout
        android:background="@drawable/inventory_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        android:paddingLeft="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/finish_right_iv"
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_43"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_12_5"
            android:src="@mipmap/icon_yiwancheng"
            />
        <TextView
            android:id="@+id/finish_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【微信】订单编号：----------"
            android:textStyle="normal"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            tools:ignore="HardcodedText"
            android:layout_marginTop="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/finish_comImg"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@id/finish_orderNumber"
            android:layout_marginTop="@dimen/dp_12_5"
            android:background="@mipmap/icon"
            tools:ignore="ContentDescription"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/finish_comImg"
            android:layout_alignBottom="@id/finish_comImg"
            android:layout_toRightOf="@id/finish_comImg"
            android:layout_marginLeft="@dimen/dp_11_5"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/finish_gcomName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:text="----"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_0"-->
            <!--android:layout_weight="1"-->
            <!--android:orientation="horizontal"-->
            <!--android:gravity="center_vertical"-->
            <!--&gt;-->
            <!--<TextView-->
            <!--android:id="@+id/daifu_pirce"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="单价￥:xxx"-->
            <!--android:textColor="#333333"-->
            <!--android:textSize="@dimen/sp_13"-->
            <!--tools:ignore="HardcodedText" />-->

            <!---->
            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/finish_commodityAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="售卖数量:---"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/finish_commodityPrice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="售卖总价：￥----"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText" />
            <TextView
            android:id="@+id/finish_orderBuildTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="收货时间：----.--.--"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13"
            tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>