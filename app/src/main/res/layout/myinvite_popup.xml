<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
    <RelativeLayout
        android:id="@+id/myinvite_popup_rl"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_315"
        android:orientation="vertical"
        android:background="@mipmap/bgkp"
        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/invite_fridment"
        android:layout_marginTop="@dimen/dp_22_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请好友"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        />
    <ImageView
        android:id="@+id/myinvite_two_dimention_code_iv"
        android:layout_width="@dimen/dp_117"
        android:layout_height="@dimen/dp_117"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon"
        tools:ignore="ContentDescription"
        android:layout_below="@id/invite_fridment"
        android:layout_marginTop="@dimen/dp_46_5"
        />

        <RelativeLayout
            android:id="@+id/invite_rl"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_below="@id/myinvite_two_dimention_code_iv"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/myinvite_two_dimention_cod_tv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请码：-----"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:id="@+id/fuzhi_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:layout_centerVertical="true"
                android:textColor="@color/c_000000"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/myinvite_two_dimention_cod_tv"
                android:background="@drawable/fuzhi_bg_shape"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/invite_rl"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/myinvite_share_wechat_btn_tv"
                android:background="@drawable/ripple_btn"
                android:layout_height="@dimen/dp_33"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_18"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="@color/c_ffffff"
                android:text="保存图片"
                android:layout_marginTop="@dimen/dp_17_5"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_xiazai"
                android:layout_below="@id/myinvite_two_dimention_cod_tv"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_below="@id/myinvite_popup_rl"
        android:id="@+id/myinvite_clone_diss_popup_iv"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/icon_close"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>