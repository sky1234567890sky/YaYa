<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
    <RelativeLayout
        android:id="@+id/myinvite_popup_rl"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_315"
        android:orientation="vertical"
        android:background="@mipmap/bgkp"
        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/invite_fridment"
        android:layout_marginTop="@dimen/dp_22_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请好友"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        />
    <ImageView
        android:id="@+id/myinvite_two_dimention_code_iv"
        android:layout_width="@dimen/dp_117"
        android:layout_height="@dimen/dp_117"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon"
        tools:ignore="ContentDescription"
        android:layout_below="@id/invite_fridment"
        android:layout_marginTop="@dimen/dp_46_5"
        />
    <TextView
        android:id="@+id/myinvite_two_dimention_cod_tv"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请码：-----"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_below="@id/myinvite_two_dimention_code_iv"
        tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/myinvite_share_wechat_btn_tv"
            android:background="@drawable/ripple_btn"
            android:layout_height="@dimen/dp_33"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/c_ffffff"
            android:text="将图片保存本地"
            android:layout_marginTop="@dimen/dp_17_5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/myinvite_two_dimention_cod_tv"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/myinvite_popup_rl"
        android:id="@+id/myinvite_clone_diss_popup_iv"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/icon_close"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>