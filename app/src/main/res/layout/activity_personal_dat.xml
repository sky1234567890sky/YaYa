<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.PersonalDatActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/personal_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/personaldata"
                android:textColor="#333333"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            >
    <RelativeLayout
        android:background="@drawable/persinal_shape_bg"
        android:id="@+id/persional_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/personal_header_iv"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_centerVertical="true"
            app:riv_oval="true"
            android:src="@mipmap/icon"
            />

        <ImageView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/icon_more"
            />
    </RelativeLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            >
    <RelativeLayout
        android:background="@drawable/persinal_shape_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/persional_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            />
    </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            >
    <RelativeLayout
        android:background="@drawable/persinal_shape_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/persional_phone_code"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>