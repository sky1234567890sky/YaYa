<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.my.WechatPayReceiverCodeActivity">

    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wechatpay_receive_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/back_hover"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/wechatpay_receive"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage"
                />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码开关"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            tools:ignore="SpUsage" />

        <Switch
            android:id="@+id/wechatpay_two_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@color/c_BBBBBB"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_add1_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/two_ll"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@color/c_BBBBBB"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/pay_add2_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/get_menry"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:text="任意收款金额"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"

            />

        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:text="1000元"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            tools:ignore="HardcodedText"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/c_BBBBBB"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_add3_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@color/c_BBBBBB"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pay_add4_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        >
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text="2000元"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"
            />
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text="5000元"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_alignParentRight="true"
            tools:ignore="HardcodedText,RtlHardcoded"
            />
    </RelativeLayout>
</LinearLayout>