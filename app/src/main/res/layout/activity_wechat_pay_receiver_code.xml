<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.WechatPayReceiverCodeActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/wechatpay_receive_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/icon_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/wechatpay_receive"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_12"

            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="二维码开关"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/dp_15"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                <Switch
                    android:id="@+id/wechatpay_two_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:checked="false"
                    android:thumb="@drawable/switch_twocode"
                    android:track="@drawable/switch_track_selector"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/wechat_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableAutoLoadMore="true"
            app:srlEnableLoadMore="true"
            >

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="FixedBehind"
                app:srlDrawableMarginRight="@dimen/dp_20"
                app:srlDrawableProgress="@mipmap/icon_dark_refresh"
                app:srlDrawableProgressSize="@dimen/dp_20"
                app:srlEnableLastTime="true"
                app:srlTextSizeTime="@dimen/sp_8"
                app:srlTextSizeTitle="@dimen/sp_12"
                android:background="@color/c_ccc"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/wechat_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlDrawableProgress="@mipmap/icon_dark_refresh"
                app:srlTextSizeTime="@dimen/sp_8"
                app:srlTextSizeTitle="@dimen/sp_12"
                />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

