<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.WechatPayReceiverCodeActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            >
            <ImageView
                android:id="@+id/wechatpay_receive_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/icon_back"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/wechatpay_receive"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18"
                tools:ignore="SpUsage"
                />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_gravity="center_horizontal"

            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码开关"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
        <Switch
            android:id="@+id/wechatpay_two_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:checked="false"
            android:thumb="@drawable/switch_twocode"
            android:track="@drawable/switch_track_selector"
            tools:ignore="RtlHardcoded"
            />
    </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!--android:thumb="@style/switch_color"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/pay_add1_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/icon_chuantu"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_ll"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/pay_add2_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/icon_chuantu"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/get_menry"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:text="任意收款金额"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"

            />

        <TextView
            android:id="@+id/iv_money1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:text="---元"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            tools:ignore="HardcodedText"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pay_add3_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/icon_chuantu"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pay_add4_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/icon_chuantu" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        >
        <TextView
            android:id="@+id/iv_money2"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text="---元"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"
            />
        <TextView
            android:id="@+id/iv_money3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text="---元"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_alignParentRight="true"
            tools:ignore="HardcodedText,RtlHardcoded"
            />
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>