<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_dengji_huangjin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/c_ffffff"
        app:cardElevation="@dimen/dp_5"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/myinvite_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">
            <ImageView
                android:id="@+id/dengji_iv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_weight="1"
                android:src="@mipmap/icon_wangzhe"
                tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded" />

            <TextView
                android:id="@+id/fenpei_baifen"
                android:layout_width="@dimen/dp_0"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分配----%"
                android:lines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/jieliu_baifen"
                android:layout_width="@dimen/dp_0"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="截留----%"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/yaoqing_item_btn1"
                    tools:ignore="HardcodedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/inventory_tv_btn_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="邀请"
                    android:textColor="@drawable/btn_tvcolor_selector"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>