<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/register_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/register"
                android:textColor="@color/c_title_tvcolor"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/register_headleriv"
            android:layout_width="@dimen/dp_113_5"
            android:layout_height="@dimen/dp_113_5"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_32"
            android:src="@mipmap/icon"
            app:riv_corner_radius_bottom_left="@dimen/dp_10"
            app:riv_corner_radius_bottom_right="@dimen/dp_10"
            app:riv_corner_radius_top_left="@dimen/dp_10"
            app:riv_corner_radius_top_right="@dimen/dp_10"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />

        <!--<com.administrator.yaya.design.SmsVerifyView-->
        <!--android:id="@+id/sms_verify_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@mipmap/shake"
                    />

                <EditText
                    android:id="@+id/register_et_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="@string/et_phone"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/c_000000"
                    android:textColorHint="@color/c_et_tvcolor"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    tools:ignore="Autofill,RtlHardcoded" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--获取验证码-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/login_register_up_et_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@mipmap/yz" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_register_verificationcode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:hint="@string/register_et_phone_code"
                        android:inputType="phone|number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/c_000000"
                        android:textColorHint="@color/c_et_tvcolor"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/btn_register_phonecode"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/ripple_btn"
                        android:gravity="center"
                        android:text="@string/getcode"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--获取验证码-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/login_register_up_et_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@mipmap/key" />

                <EditText
                    android:id="@+id/et_register_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:hint="@string/et_login_possword"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textColor="@color/c_000000"
                    android:textColorHint="@color/c_et_tvcolor"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/sp_14" />
                <!--nextFocusDown跳到下一个可以跳到下一个输入框的功能-->
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--邀请码-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/login_register_up_et_shape"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@mipmap/icon_yq"
                    tools:ignore="ContentDescription,RtlHardcoded" />
                <EditText
                    android:id="@+id/et_getcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:hint="@string/et_invitationcode"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/c_000000"
                    android:textColorHint="@color/c_et_tvcolor"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="登     录"-->
        <!--android:textSize="@dimen/sp_14"-->
        <!--android:textColor="@color/white"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:padding="@dimen/dp_10"-->
        <!--android:onClick="register"-->
        <!--android:layout_marginLeft="@dimen/dp_80"-->
        <!--android:layout_marginRight="@dimen/dp_80"-->
        <!--android:background="@color/app_theme_color"-->
        <!--android:layout_marginTop="@dimen/dp_30"-->
        <!--/>-->

        <TextView
            android:id="@+id/register_register_btn"
            android:layout_width="@dimen/dp_305"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/ripple_btn"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</RelativeLayout>