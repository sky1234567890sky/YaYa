<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->
        <!--选择图片后上传   单独显示一张图片-->
        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:id="@+id/ImageView_url_wechat"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:visibility="gone"

            />
        <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->

        <!--文字提示未审核-->
        <TextView
            android:id="@+id/wechat_hint_unreviewed"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:text="待审核状态...."
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText"
            android:visibility="gone"
            android:background="#80ffffff"
            />
        <!-- /////////////////////////////////////////// -->
        <TextView
            android:id="@+id/wechat_no_shenhe"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:text="审核不通过...."
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText"
            android:visibility="gone"
            android:background="#80ffffff"
            />






        <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->
        <LinearLayout
            android:id="@+id/wechatpay_item_ll"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_170"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/wechatpay_add1_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/icon_chuantu"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/wechat_getmenry_tv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechatpay_item_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="任意收款金额"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:layout_marginBottom="@dimen/dp_5"
            />

    </RelativeLayout>

</RelativeLayout>