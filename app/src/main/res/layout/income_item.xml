<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_height="@dimen/dp_70"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/sp_13"
        android:paddingLeft="@dimen/dp_16_5"
        android:layout_marginTop="@dimen/dp_14_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_17"
        android:paddingRight="@dimen/dp_12"
        android:background="@drawable/myincome_item_bg">

    <TextView
        android:id="@+id/myincome_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单：-----------"
        android:textStyle="normal"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13"
        tools:ignore="HardcodedText"
        android:layout_marginTop="@dimen/dp_16_5"
        />
    <TextView
        android:id="@+id/myincome_putaway_salesAmount"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="售卖数量：---"
        android:textStyle="normal"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13"
        tools:ignore="HardcodedText"
        />
    <TextView
        android:id="@+id/myincome_earningsAmount"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textStyle="normal"
        android:textColor="#3399FF"
        android:textSize="@dimen/sp_16"
        tools:ignore="HardcodedText"
        android:layout_marginTop="@dimen/dp_12_5"
        />

    <TextView
        android:id="@+id/myincome_earningsTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----. --.-- --:--"
        android:textStyle="normal"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/sp_12"
        tools:ignore="HardcodedText"
        android:layout_marginTop="@dimen/dp_15"
        />

    </RelativeLayout>
</LinearLayout>