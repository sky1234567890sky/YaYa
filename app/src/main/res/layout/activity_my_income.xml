<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.MyIncomeActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/myincome_back_iv"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/myincome"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
            <ImageView
            android:id="@+id/myincome_game_money_plain_iv"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_bangzhu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
            />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>


    <!--android:background="@drawable/incom_shape_bg"-->
    <RelativeLayout
        android:background="@drawable/title_bg_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <View
            android:id="@+id/wire"
            android:background="#FFBCBCBD"
            android:layout_height="match_parent"
            android:layout_width="@dimen/dp_0_5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/get_gamemony_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/white"
            android:text="800.00"
            android:layout_toLeftOf="@id/wire"
            android:layout_marginTop="@dimen/dp_22"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/all_gamemoney_top_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/wire"
            android:gravity="center"
            android:textSize="@dimen/sp_26"
            android:text="2900.00"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/get_gamemoney_down_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="当前可用XXX"
            android:layout_toLeftOf="@id/wire"
            android:layout_below="@id/get_gamemony_tv"
            android:textColor="@color/white"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/all_gamemoney_down_tv"
            android:layout_width="183dp"
            android:layout_height="22dp"
            android:layout_below="@id/get_gamemony_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/wire"
            android:gravity="center"
            android:text="总收益：xxx"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/iNventory_tab"
        app:tabIndicatorHeight="@dimen/dp_3"
        app:tabIndicatorColor="@color/blue"
        app:tabSelectedTextColor="#333333"
        app:tabTextColor="#999999">
    </android.support.design.widget.TabLayout>

    <!--<com.flyco.tablayout.SlidingTabLayout-->
        <!--android:id="@+id/tab_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_40"-->
        <!--android:background="@color/white"-->
        <!--android:layout_marginLeft="@dimen/dp_10"-->
        <!--android:layout_marginRight="@dimen/dp_10"-->
