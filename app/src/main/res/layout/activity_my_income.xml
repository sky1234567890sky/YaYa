<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.MyIncomeActivity"
    >
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo"
        tools:ignore="ContentDescription"
        />

    <RelativeLayout
        android:id="@+id/myincome_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/myincome_back_iv"
            android:layout_width="@dimen/dp_39"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myincome"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_18"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/myincome_game_money_plain_iv"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:src="@mipmap/icon_bangzhu" />
    </RelativeLayout>
    <!--android:background="@drawable/incom_shape_bg"-->

    <RelativeLayout
        android:id="@+id/myincome_rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@id/myincome_rl"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/title_bg_blue">

        <View
            android:id="@+id/wire"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="#FFBCBCBD"
            />

        <TextView
            android:id="@+id/get_gamemony_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toLeftOf="@id/wire"
            android:gravity="center"
            android:text="xxx"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_26"
            />

        <TextView
            android:id="@+id/all_gamemoney_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toRightOf="@id/wire"
            android:gravity="center"
            android:text="xxx"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_26"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/get_gamemoney_down_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_gamemony_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@id/wire"
            android:gravity="center"
            android:text="当前可用XXX"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/all_gamemoney_down_tv"
            android:layout_width="183dp"
            android:layout_height="22dp"
            android:layout_below="@id/get_gamemony_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/wire"
            android:gravity="center"
            android:text="总收益：xxx"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/iNventory_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/myincome_rl2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:tabIndicatorColor="@color/blue"
        app:tabIndicatorHeight="@dimen/dp_0"
        app:tabSelectedTextColor="#333333"
        app:tabBackground="@android:color/transparent"
        app:tabTextColor="#999999"
        >
    </android.support.design.widget.TabLayout>
