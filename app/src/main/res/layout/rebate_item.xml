<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myincome_rebaterecord_item_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_14_5"
        android:layout_centerInParent="true"
        >

    <ImageView
        android:id="@+id/rebate_name_headleriv"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@mipmap/icon"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/reabate_userNickName"
        android:layout_toRightOf="@+id/rebate_name_headleriv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称:(用戶ID：------)"
        android:textStyle="normal"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_9_5"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        />
    <TextView
        android:id="@+id/rebate_earningsTime"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----.--.-- --:--"
        android:textStyle="normal"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/sp_13"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_9_5"
        android:layout_toRightOf="@+id/rebate_name_headleriv"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/rebate_salesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12_5"
        android:text="---"
        android:textColor="#3399FF"
        android:textSize="@dimen/sp_16"
        android:layout_marginRight="@dimen/dp_13_5"
        android:layout_centerVertical="true"
        android:textStyle="normal"
        tools:ignore="HardcodedText,RtlHardcoded" />
</RelativeLayout>
</RelativeLayout>