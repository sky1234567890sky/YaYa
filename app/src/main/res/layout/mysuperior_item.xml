<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/sp_13"
    android:background="@drawable/myincome_rebaterecord_item_bg"
    android:layout_marginTop="@dimen/dp_14_5"
    >

    <ImageView
        android:id="@+id/mysuperior_headleriv"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:src="@mipmap/icon"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/mysuperior_rabaterecord_name"
        android:layout_toRightOf="@+id/mysuperior_headleriv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:textStyle="normal"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_9_5"
        />


    <TextView
        android:id="@+id/mysuperior_junior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx游戏币"
        android:textStyle="normal"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_9_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_26"
        tools:ignore="HardcodedText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mysuperior_junior0"
        android:text="今日贡献:"
        android:textStyle="normal"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        tools:ignore="HardcodedText"
        android:layout_toLeftOf="@+id/mysuperior_junior"
        />
    <TextView
        android:id="@+id/mysuperior_putaway_number_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户ID:xxxxx"
        android:textStyle="normal"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_9_5"
        android:layout_toRightOf="@+id/mysuperior_headleriv"
        android:layout_marginBottom="@dimen/dp_15"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/mysuperior_userContributeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积累贡献：xx游戏币"
        android:textStyle="normal"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_9_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/mysuperior_add_number"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+200"
        android:textStyle="normal"
        android:textColor="#3399FF"
        android:textSize="@dimen/sp_16"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_13_5"
        android:visibility="gone"
        />

</RelativeLayout>