<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14_5"
        android:layout_marginRight="@dimen/sp_13"

        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            >
            <ImageView
                android:id="@+id/mysuperior_headleriv"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12_5"
                android:src="@mipmap/icon" />

            <TextView
                android:id="@+id/mysuperior_rabaterecord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/mysuperior_headleriv"
                android:text="用户昵称"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/mysuperior_junior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_9_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_26"
                android:text="xx游戏币"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mysuperior_junior0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toLeftOf="@+id/mysuperior_junior"
                android:text="今日贡献:"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mysuperior_putaway_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="18dp"
                android:layout_toRightOf="@+id/mysuperior_headleriv"
                android:text="用户ID:xxxxx"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/mysuperior_userContributeTotal"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_9_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="积累贡献：xx游戏币"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mysuperior_add_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_13_5"
                android:text="+200"
                android:textColor="#3399FF"
                android:textSize="@dimen/sp_16"
                android:textStyle="normal"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>