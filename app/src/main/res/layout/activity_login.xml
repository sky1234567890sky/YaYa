<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login"
                android:textColor="@color/c_title_tvcolor"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/login_headler_iv"
        android:layout_width="@dimen/dp_67_5"
        android:layout_height="@dimen/dp_67_5"
        android:background="@mipmap/icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        app:riv_corner_radius_top_left="@dimen/dp_10"
        app:riv_corner_radius_bottom_right="@dimen/dp_10"
        app:riv_corner_radius_bottom_left="@dimen/dp_10"
        app:riv_corner_radius_top_right="@dimen/dp_10"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat"
        />

    <LinearLayout
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="@mipmap/dl_shuru"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_width="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/shake"
            />
        <EditText
            android:id="@+id/login_name_et"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/c_et_tvcolor"
            android:textColor="@color/c_000000"
            android:maxLines="1"
            android:lines="1"
            android:hint="@string/et_phone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/dl_shuru"
        android:layout_height="@dimen/dp_44"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/key"
            />
        <EditText
            android:id="@+id/et_login_password"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="@color/c_et_tvcolor"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:hint="@string/et_login_possword"
            android:elevation="@dimen/dp_8"
            android:inputType="textPassword"
            android:lines="1"
            />
    </LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/login_btn"-->
        <!--android:layout_width="@dimen/dp_305"-->
        <!--android:layout_height="@dimen/dp_44"-->
        <!--android:background="@drawable/shape_btn"-->
        <!--android:layout_marginLeft="@dimen/dp_35"-->
        <!--android:layout_marginRight="@dimen/dp_35"-->
        <!--android:layout_marginTop="@dimen/dp_50"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/login"-->
        <!--android:textColor="@color/c_ffffff"-->
        <!--android:layout_gravity="center"-->
        <!--android:textSize="@dimen/sp_18"-->
        <!--android:textStyle="normal"-->
        <!--/>-->

        <Button
            android:id="@+id/login_btn"
            android:layout_width="@dimen/dp_305"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/button_selector"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center"
            android:clickable="true"
            android:elevation="@dimen/dp_8"
            android:text="@string/login"
            android:textColor="@color/c_ffffff"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_18"
            android:textStyle="normal"
            />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_registered"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:text="@string/register_name"
            android:background="@drawable/ripple_bg"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_14"
            android:gravity="center_vertical"
            android:background="@color/c_view"
            />

        <TextView
            android:id="@+id/tv_forgetPassword"
            android:layout_marginLeft="@dimen/dp_30"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/number_password"
            android:textColor="#B3B3B3"
            android:background="@drawable/ripple_bg"
            />
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>