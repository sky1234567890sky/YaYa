<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.administrator.yaya"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.XinyufenRacordActivity"
    tools:ignore="ResAuto"
    >
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/xinyufene_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/xinyufen_back_iv"
            android:layout_width="@dimen/dp_39"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/icon_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信誉分记录"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_18"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/xinyufen_shuoming_btn"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:src="@mipmap/icon_bangzhu" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xinyufene_rl">

        <android.support.v7.widget.CardView
            android:id="@+id/xinyufen_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_3"
            android:layout_marginRight="@dimen/dp_10"
            app:cardBackgroundColor="@color/c_ffffff"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                >
                <!--<com.administrator.yaya.custom.RoundProgressBar-->
                <!--android:id="@+id/roundProgressBar2"-->
                <!--android:layout_width="@dimen/dp_206"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="@dimen/dp_18"-->
                <!--android:layout_marginBottom="@dimen/dp_18"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android_custom:roundColor="#E0EEFF"-->
                <!--android_custom:roundProgressColor="@android:color/black"-->
                <!--android_custom:textColor="#9A32CD"-->
                <!--android_custom:textIsDisplayable="false"-->
                <!--android_custom:roundWidth="24dip"-->
                <!--android_custom:textSize="18sp"-->
                <!--/>-->
                <!--android:id="@+id/"-->

                <!--<com.lwb.piechart.PieChartView-->
                <!--android:id="@+id/pie_chart_view"-->
                <!--android:layout_width="@dimen/dp_206"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="@dimen/dp_6"-->
                <!--android:layout_marginBottom="@dimen/dp_6"-->
                <!--/>-->

                <com.administrator.yaya.custom.CircularProgressView
                    android:id="@+id/progress_xinyufen"
                    android:layout_width="@dimen/dp_206"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_15"
                    app:backColor="#E0EEFF"
                    app:backWidth="@dimen/dp_20"
                    app:progColor="#418EEE"
                    android:layout_centerInParent="true"
                    app:progWidth="@dimen/dp_23"
                    app:progress="70"
                    app:progStartColor="#5FCAF7"
                    app:progFirstColor="#418EEE"
                    >
                </com.administrator.yaya.custom.CircularProgressView>

                <TextView
                    android:id="@+id/xinyufen_chegnji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:layout_centerInParent="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_40"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />
                <TextView
                    android:id="@+id/xinyufen_chegnji1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xinyufen_chegnji"
                    android:text="良好"
                    android:layout_centerInParent="true"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/xinyufen_card2"-->
