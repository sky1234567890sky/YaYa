<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_12_5"

        android:layout_marginRight="@dimen/dp_12_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12_5"
        android:paddingBottom="@dimen/dp_10"
        tools:ignore="RtlHardcoded">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/sell_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="【微信】订单编号：xxxxxxxxxxx"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/sell_comImg"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_below="@id/sell_orderNumber"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/icon"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/sell_comImg"
                android:layout_alignBottom="@id/sell_comImg"
                android:layout_marginLeft="@dimen/dp_11_5"
                android:layout_toRightOf="@id/sell_comImg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/sell_gcomName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_0"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center_vertical"-->
                <!--&gt;-->
                <!--<TextView-->
                <!--android:id="@+id/daifu_pirce"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="单价￥:xxx"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="@dimen/sp_13"-->
                <!--tools:ignore="HardcodedText" />-->

                <!---->
                <!--</LinearLayout>-->

                <TextView
                    android:id="@+id/sell_commodityAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="售卖数量:xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/sell_commodityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="售卖总价￥:xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />
                <!--<TextView-->
                <!--android:id="@+id/daifu_orderBuildTime"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="@dimen/dp_0"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="下单时间：xxxx.xx.xx"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="@dimen/sp_13"-->
                <!--tools:ignore="HardcodedText" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/sell_getGathering_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sell_comImg"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12_5"
                android:background="@drawable/inventory_tv_btn_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_3"
                android:text="确认收货"
                android:textColor="@drawable/btn_tvcolor_selector"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_6"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/sell_cancel_orderform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sell_comImg"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_toLeftOf="@+id/sell_getGathering_btn"
                android:background="@drawable/inventory_tv_btn_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_3"
                android:text="取消订单"
                android:textColor="@drawable/btn_tvcolor_selector"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>