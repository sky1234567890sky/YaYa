                <!--android:textSize="@dimen/sp_13"-->
                <!--tools:ignore="HardcodedText" />-->
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/sell_comImg"
            android:layout_alignParentRight="true"
            android:id="@+id/sell_getGathering_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="确认收货"
            android:gravity="center"
            android:background="@drawable/inventory_tv_btn_selector"
            android:textColor="@drawable/btn_tvcolor_selector"
            tools:ignore="HardcodedText"
            android:layout_marginRight="@dimen/dp_12_5"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/sell_cancel_orderform"
            android:layout_toLeftOf="@+id/sell_getGathering_btn"
            android:layout_below="@+id/sell_comImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
