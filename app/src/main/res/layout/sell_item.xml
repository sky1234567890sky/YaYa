<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:background="@drawable/inventory_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_marginRight="@dimen/dp_12_5"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_12_5"
        android:paddingBottom="@dimen/dp_10"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/sell_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【微信】订单编号：xxxxxxxxxxx"
            android:textStyle="normal"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            tools:ignore="HardcodedText"
            android:layout_marginTop="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/sell_comImg"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@id/sell_orderNumber"
            android:layout_marginTop="@dimen/dp_12_5"
            android:background="@mipmap/icon"
            tools:ignore="ContentDescription"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/sell_comImg"
            android:layout_alignBottom="@id/sell_comImg"
            android:layout_toRightOf="@id/sell_comImg"
            android:layout_marginLeft="@dimen/dp_11_5"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/sell_gcomName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:text="xxx"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_0"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center_vertical"-->
                <!--&gt;-->
