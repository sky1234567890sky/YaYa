<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_ffffff">

    <!--已付款-->
    <!--<ImageView-->
        <!--android:layout_width="@dimen/dp_312_5"-->
        <!--android:layout_height="@dimen/dp_127_5"-->
        <!--android:src="@mipmap/logo"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_12_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_162"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_yifukuan"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <!-- 已付款 -->
        <TextView
            android:id="@+id/yifu_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：xxxxxxxxxxx"
            android:textStyle="normal"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            tools:ignore="HardcodedText"
            android:layout_marginTop="@dimen/dp_15"
            />

        <ImageView
            android:id="@+id/yifu_comImg"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@+id/yifu_orderNumber"
            android:layout_marginTop="@dimen/dp_12_5"
            android:background="@mipmap/icon"
            tools:ignore="ContentDescription"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/yifu_comImg"
            android:layout_alignBottom="@+id/yifu_comImg"
            android:layout_toRightOf="@+id/yifu_comImg"
            android:layout_marginLeft="@dimen/dp_11_5"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/yifu_gamemoney"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:text="xxx"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/yifu_comPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="单价￥：xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/yifu_commodityAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="数量：xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:id="@+id/yifu_commodityPrice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="付款金额：￥xxx"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/yifu_comImg"
            android:id="@+id/yifu_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12_5"
            android:background="@drawable/inventory_tv_btn_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_3"
            android:text="付款信息"
            android:textColor="@drawable/btn_tvcolor_selector"
            android:textSize="@dimen/sp_14"
            tools:ignore="HardcodedText"
            />
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>