<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.my.CustomerServiceActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/custom_service_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/custom_service"
                android:textColor="#333333"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="@string/custom_service_tv"
        android:gravity="center_horizontal"
        tools:ignore="RtlHardcoded"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_146"
        />
    <TextView
        android:id="@+id/phone_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="@string/custom_service_tv2"
        tools:ignore="RtlHardcoded"
        android:textSize="@dimen/sp_16"
        android:gravity="center_horizontal"
        android:autoLink = "phone"
        />
</LinearLayout>
</RelativeLayout>