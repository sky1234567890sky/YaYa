    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                >
            <TextView
                android:id="@+id/title_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/homepage"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="normal"
                />
                <com.yc.cn.ycbannerlib.marquee.MarqueeView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/marqueeView"
                    android:layout_width="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12_5"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:paddingStart="@dimen/dp_0"
                    app:mvAnimDuration="1000"
                    app:mvInterval="2000"
                    app:mvTextColor="#464C4E"
                    app:mvTextSize="@dimen/sp_16"
                    app:mvSingleLine="true"
                    />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_marginTop="@dimen/dp_9_5"
        android:layout_marginRight="@dimen/dp_12_5"
        android:background="@drawable/homepage_shape_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/home_buy_now_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_24_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/ripple_btn"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_17_5"
            android:paddingRight="@dimen/dp_17_5"
            android:text="@string/now_buy"
            android:textColor="@color/c_ffffff" />
        <ImageView
            android:id="@+id/headler_iv"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/home_gamemoney_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/headler_iv"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14_5"
            android:layout_toRightOf="@id/headler_iv"
            android:text="游戏币001"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/home_gamemoney_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/headler_iv"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_14_5"
            android:layout_toRightOf="@id/headler_iv"
            android:text="进货价 : ￥100.0"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

        <com.gongwen.marqueen.SimpleMarqueeView
            android:id="@+id/marquee"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:layout_marginTop="@dimen/dp_9_5"
            android:layout_marginRight="@dimen/dp_12_5"
            android:layout_height="@dimen/dp_40"
            android:layout_width="match_parent"
            android:flipInterval="2500"
            android:inAnimation="@anim/in_right"
            android:outAnimation="@anim/out_left"
            app:marqueeAnimDuration="2000"
            app:smvTextGravity="center_vertical"
            app:smvTextSize="18sp"
            android:autoStart="true"
            android:animateFirstView="true"
            app:smvTextColor="@color/c_cccccc"
            app:smvTextSingleLine="true"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_shape_bg"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_12_5"
        android:paddingLeft="@dimen/dp_24_5"
        android:paddingTop="@dimen/dp_17"
        android:paddingRight="@dimen/dp_22_5"
        android:paddingBottom="@dimen/dp_30"
        >
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_zhifubap" />

