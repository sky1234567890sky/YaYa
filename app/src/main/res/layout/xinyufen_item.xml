<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,RtlHardcoded">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/c_ffffff"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_13"
        android:background="@drawable/ranking_item_bg"
        android:gravity="center_vertical"
        >
        <!--增加 +3-->
        <TextView
            android:id="@+id/xinyufen_tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_26"
            android:textColor="#0099FF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_23"
            android:gravity="center_vertical"
            />

        <!--超时释放  显示隐藏-->
        <TextView
            android:id="@+id/xinyufen_tv_succeess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功确认"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_23"
            android:gravity="center_vertical"
             />

        <TextView
            android:id="@+id/xinyufen_tv_orderform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单：-----------------"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_23"
            android:gravity="center_vertical"
            android:layout_below="@id/xinyufen_tv_succeess"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <!--&lt;!&ndash;线&ndash;&gt;-->
