<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpGameMoneyActivity">

    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/upgame_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/back_hover"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/upgame"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前游戏币数量："
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upgame_money_number"
            android:layout_marginLeft="@dimen/dp_194"
            android:text="500"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_upgame_money_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上架游戏币数量："
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_toRightOf="@id/tv_upgame_money_number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_upgame_money_number2"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            android:background="@null"
            android:hint="请输入"
            android:layout_marginRight="@dimen/dp_28"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_45"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否拆单:"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_23"
            />

        <RadioGroup
            android:id="@+id/upgame_money_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_97"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upgame_money_rb1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textColor="@color/c_101010"
                android:textSize="@dimen/sp_14"
                />
            <RadioButton
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upgame_money_rb2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:textColor="@color/c_101010"
                android:textSize="@dimen/sp_14"
                />
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/up_btn"
            android:text="@string/up_jia"
            android:layout_alignParentBottom="true"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_login_redbtn"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_7"
            />
    </RelativeLayout>


</LinearLayout>