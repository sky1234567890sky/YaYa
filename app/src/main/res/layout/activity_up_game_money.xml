<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context=".activity.UpGameMoneyActivity">

    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logo">
    </ImageView>

        <RelativeLayout
            android:id="@+id/upgame_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/upgame_back_iv"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/upgame"
                android:textColor="#333333"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/upgame_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@id/upgame_rl"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/background_rl"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/icon_youxibi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11_5"
                android:text="当前游戏币数量："
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/upgame_money_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_38"
                android:text="500"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_upgame_money_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12_5"
                android:text="上架游戏币数量："
                android:textColor="@color/c_101010"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_upgame_money_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_toRightOf="@id/tv_upgame_money_number2"
                android:background="@null"
                android:hint="请填写上架游戏币数量"
                android:maxLines="1"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12_5"
                android:text="是否拆单:"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <RadioGroup
                android:id="@+id/upgame_money_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_55"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <RadioButton
                    android:id="@+id/upgame_money_rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9_5"
                    android:text="是"
                    android:textColor="@color/c_101010"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />

                <RadioButton
                    android:id="@+id/upgame_money_rb2"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_29_5"
                    android:background="@drawable/upgame_rb_selector2"
                    android:button="@null"
                    android:checked="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="否"
                    android:textColor="@color/c_101010"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgame_ll"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_85"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/shape_btn"
        android:text="@string/up_jia"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>