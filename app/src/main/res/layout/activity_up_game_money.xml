<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    tools:context=".activity.UpGameMoneyActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        />
    <com.administrator.yaya.design.CommonTitle
        android:id="@+id/ct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/upgame_back_iv"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/upgame"
                android:textColor="#333333"
                android:textSize="@dimen/dp_18"
                android:layout_centerVertical="true"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>
    
    <LinearLayout
        android:layout_below="@id/ct"
        android:id="@+id/upgame_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/background_rl"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:src="@mipmap/icon_youxibi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前游戏币数量："
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_11_5"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/upgame_money_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_38"
            android:text="500"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_upgame_money_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上架游戏币数量："
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_12_5"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_toRightOf="@id/tv_upgame_money_number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_upgame_money_number2"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            android:background="@null"
            android:hint="请填写上架游戏币数量"
            android:layout_marginRight="@dimen/dp_28"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否拆单:"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12_5"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <RadioGroup
            android:id="@+id/upgame_money_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_55"
            tools:ignore="RtlHardcoded">
            <RadioButton
                android:id="@+id/upgame_money_rb1"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/upgame_rb_selector1"
                  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textColor="@color/c_101010"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_9_5"
                tools:ignore="HardcodedText" />
            <RadioButton
                android:id="@+id/upgame_money_rb2"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:button="@null"
                android:background="@drawable/upgame_rb_selector2"
                android:layout_marginLeft="@dimen/dp_29_5"
                android:checked="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:textColor="@color/c_101010"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"
                tools:ignore="HardcodedText" />
        </RadioGroup>
    </LinearLayout>
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/up_btn"
            android:text="@string/up_jia"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_btn"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_below="@+id/upgame_ll"
            />
</RelativeLayout>