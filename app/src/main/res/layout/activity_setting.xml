<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.my.SettingActivity">

    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/setting_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/back_hover"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_rl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_gmm"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_ChangePassword"
                android:layout_toRightOf="@id/iv_gmm"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_invite"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_back_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_rl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_gzfmm"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_settingpayPassword"
                android:layout_toRightOf="@id/iv_gzfmm"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_back_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_rl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_fk"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_Feedback"
                android:layout_toRightOf="@id/iv_fk"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_receive"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_back_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_rl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_clean"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_clean"
                android:layout_toRightOf="@id/iv_clean"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_ps"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_back_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_rl"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_update"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_update"
                android:layout_toRightOf="@id/iv_update"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_service"
                android:textColor="@color/c_000000"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_back_right"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>