                <TextView
                    android:id="@+id/weishouhuo_commodityAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="售卖数量:xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/weishouhuo_commodityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="售卖总价：￥xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/weishouhuo_orderBuildTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="取消时间：xxxx.xx.xx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:id="@+id/weishouhuo_zaici_queren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center_ll"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_12_5"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="@drawable/inventory_tv_btn_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_5"
                android:text="再次确认"
                android:textColor="@drawable/btn_tvcolor_selector"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
