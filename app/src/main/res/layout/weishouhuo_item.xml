            <ImageView
                android:id="@+id/weishouhuo_comImg"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_below="@+id/weishouhuo_orderNumber"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@mipmap/icon"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/center_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/weishouhuo_comImg"
                android:layout_alignBottom="@+id/weishouhuo_comImg"
                android:layout_marginLeft="@dimen/dp_11_5"
                android:layout_toRightOf="@+id/weishouhuo_comImg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/weishouhuo_gcomName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="xxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_0"-->
                <!--android:layout_weight="1"-->
