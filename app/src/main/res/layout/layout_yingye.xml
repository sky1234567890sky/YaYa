<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/shangjiakapian"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="@dimen/dp_295"
    android:layout_gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_295"
        >
    <ImageView
        android:id="@+id/cancel_pop_close_iv"
        android:layout_width="@dimen/dp_11_5"
        android:layout_height="@dimen/dp_12"
        android:src="@mipmap/icon_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/popup_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_140"
        android:textColor="#ffffffff"
        android:textSize="45sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_22"
        >
        <TextView
            android:id="@+id/popup_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#EBEBEB"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal"
            android:background="@drawable/popup_btn_shape"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            tools:ignore="RtlHardcoded,SpUsage" />
        <TextView
            android:id="@+id/popup_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/popup_btn_shape2"
            android:paddingLeft="@dimen/dp_45"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_45"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/ok"
            android:textColor="#EBEBEB"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textStyle="normal"
            tools:ignore="SpUsage" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>