<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.inventory.PaymentsReceiveActivity">

    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pay_receive_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/back_hover"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pay_receive"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码开关"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            tools:ignore="SpUsage" />

        <Switch
            android:id="@+id/two_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:background="@color/c_BBBBBB"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        >
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/add1"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:background="@color/c_BBBBBB"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        >
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/add2"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/get_menry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任意收款金额"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_101010"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_below="@id/two_ll"
            android:layout_marginTop="@dimen/dp_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任意收款金额"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_101010"
            android:layout_below="@id/two_ll"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_toRightOf="@+id/get_menry"
            android:layout_marginLeft="@dimen/dp_103"
            />

        <LinearLayout
            android:layout_below="@id/get_menry"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:background="@color/c_BBBBBB"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        >
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/add3"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/get_menry"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:background="@color/c_BBBBBB"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        >
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/add4"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>



    </RelativeLayout>

</LinearLayout>