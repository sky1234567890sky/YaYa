<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/c_ffffff"
    android:layout_height="match_parent"
    tools:context=".activity.my.AlipayReceiverCodeActivity">
    <ImageView
        android:layout_width="@dimen/dp_312_5"
        android:layout_height="@dimen/dp_127_5"
        android:src="@mipmap/logo"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.administrator.yaya.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:canBack="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pay_receive_back_iv"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pay_receive"
                android:textColor="#ff333333"
                android:textSize="@dimen/dp_18"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </com.administrator.yaya.design.CommonTitle>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码开关"
            android:textColor="#333333"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            tools:ignore="SpUsage"
            />

        <Switch
            android:id="@+id/two_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add1"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/icon_chuantu"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/two_ll"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/add2"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/icon_chuantu"
                tools:ignore="ContentDescription"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/get_menry"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:text="任意收款金额"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded"

            />

        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@id/two_ll"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:text="1000元"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add3"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/icon_chuantu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@id/get_menry"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_24"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/add4"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/icon_chuantu" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_14"
        >
    <TextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:text="2000元"
        android:textColor="@color/c_101010"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        tools:ignore="HardcodedText,RtlHardcoded"
        />
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text="5000元"
            android:textColor="@color/c_101010"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_alignParentRight="true"
            tools:ignore="HardcodedText,RtlHardcoded"
            />
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>